<!DOCTYPE html>
<html lang="en">
  <head>
    <% include parts/head.ejs %>
    <title>iBot - Servers</title>
  </head>
  <body>
    <!-- Nav-bar -->
    <% include parts/header.ejs %>

    <!-- Servers -->
    <div class="jumbotron jumbotron-fluid h-100">
      <div class="container center-block h-100">
        <h1 class="mbr-section-title mbr-bold mbr-fonts-style text-center">Your mutual servers with iBot</h1>
        <hr>
        <div class="d-flex flex-wrap justify-content-center h-100">
          <% mutualGuilds.forEach((guild) => { %>
          <div title="<%= guild.name %>" data-toggle="svr" data-placement="bottom">
            <a href="/server/<%= guild.id %>">
              <img class="rounded-circle" height="75" width="75" src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=128` : '/images/discord_server.png' %>" alt="">
            </a>
          </div>
          <div class="m-3"></div>
          <% }); %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <% include parts/footer.ejs %>

    <!-- Enable tooltips -->
    <script>
      $(() => $('[data-toggle="svr"]').tooltip());
    </script>
  </body>
</html>